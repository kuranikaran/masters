hashcat -h

sudo htpasswd -c /etc/apache2/.htpasswd kali


sudo mkdir /var/www/html/attack


sudo su


chmod o+w 000-default.conf 



nano /etc/apache2/sites-available/000-default.conf   

#Add this between the VirtualHost tags:

  <Directory "/var/www/html/attack">
      AuthType Basic
      AuthName "Restricted Content"
      AuthUserFile /etc/apache2/.htpasswd
      Require valid-user
  </Directory>




sudo systemctl enable apache2
sudo systemctl start apache2

hashcat -m 0 -a 0 -o cracked.txt target_hashes.txt target_hashes.txt /usr/share/wordlists/rockyou.txt



